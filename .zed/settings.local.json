{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "WebFetch",
      "Grep",
      "Glob",
      "LS",
      "MultiEdit",
      "NotebookRead",
      "NotebookEdit",
      "TodoRead",
      "TodoWrite",
      "WebSearch"
    ]
  },
  "context_servers": {
    "Context7": {
      "command": {
        "path": "npx",
        "args": ["-y", "@upstash/context7-mcp"]
      },
      "settings": {}
    },
    "mcp-server-github": {
      "source": "extension",
      "settings": {
        "github_personal_access_token": "YOUR_GITHUB_PAT_HERE"
      }
    },
    "mcp-server-resend": {
      "source": "extension",
      "settings": {
        "resend_api_key": "YOUR_RESEND_API_KEY_HERE"
      }
    },
    "mcp-memory-service": {
      "command": "python",
      "args": ["-m", "mcp_memory_service.server"],
      "cwd": "/Users/dionedge/devqai/pfinni",
      "env": {
        "MCP_MEMORY_STORAGE_BACKEND": "sqlite_vec",
        "MCP_MEMORY_SQLITE_PATH": "/Users/dionedge/devqai/pfinni/memory/sqlite_vec.db",
        "MCP_MEMORY_BACKUPS_PATH": "/Users/dionedge/devqai/pfinni/memory/backups",
        "MCP_MEMORY_USE_ONNX": "1",
        "PYTHONPATH": "/Users/dionedge/devqai/pfinni"
      }
    }
  },
  "tab_size": 2,
  "theme": "One Dark",
  "buffer_font_family": "Ubuntu",
  "buffer_font_size": 14,
  "soft_wrap": "editor_width",
  "formatter": {
    "language_server": {
      "name": "black"
    }
  },
  "terminal": {
    "shell": {
      "program": "/bin/zsh"
    },
    "working_directory": "current_project_directory",
    "env": {
      "ZDOTDIR": "/Users/dionedge/devqai/devgen/.zed"
    },
    "font_family": "MesloLGS Nerd Font",
    "font_size": 14,
    "line_height": "comfortable"
  },
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["--line-length", "88", "-"]
        }
      },
      "format_on_save": "on",
      "tab_size": 4,
      "language_servers": ["pyright"]
    },
    "TypeScript": {
      "formatter": "prettier",
      "format_on_save": "on",
      "tab_size": 2,
      "language_servers": ["typescript-language-server"]
    },
    "JavaScript": {
      "formatter": "prettier",
      "format_on_save": "on",
      "tab_size": 2,
      "language_servers": ["typescript-language-server"]
    },
    "JSON": {
      "formatter": "prettier",
      "format_on_save": "on",
      "tab_size": 2
    },
    "YAML": {
      "formatter": "prettier",
      "format_on_save": "on",
      "tab_size": 2
    },
    "Markdown": {
      "formatter": "prettier",
      "format_on_save": "on",
      "tab_size": 2
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "analysis": {
            "typeCheckingMode": "basic",
            "autoSearchPaths": true,
            "extraPaths": [
              "/Users/dionedge/devqai",
              "/Users/dionedge/devqai/machina/mcp"
            ],
            "autoImportCompletions": true,
            "diagnosticMode": "workspace",
            "useLibraryCodeForTypes": true
          },
          "defaultInterpreterPath": "python3",
          "venvPath": "./venv"
        }
      }
    },
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "suggest": {
            "autoImports": true,
            "includeCompletionsForModuleExports": true
          },
          "preferences": {
            "importModuleSpecifier": "relative"
          }
        }
      }
    }
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    },
    "git_status": true
  },
  "project_panel": {
    "dock": "left",
    "default_width": 260,
    "file_icons": true,
    "folder_icons": true
  },
  "outline_panel": {
    "dock": "right",
    "default_width": 200
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*", "*.dockerfile"],
    "YAML": ["*.yml", "*.yaml"],
    "Shell Script": ["*.zsh", "*.bash", "*.sh"],
    "Python": ["*.py", "*.pyi", "*.pyw"],
    "FastAPI": ["main.py", "app.py", "**/api/**/*.py"],
    "PyTest": ["test_*.py", "*_test.py", "**/tests/**/*.py"],
    "MCP Config": ["mcp-servers.json", "*.mcp.json"]
  },
  "auto_save": "on_focus_change",
  "autosave": "off",
  "vim_mode": false,
  "cursor_blink": true,
  "show_whitespaces": "selection",
  "show_wrap_guides": true,
  "wrap_guides": [88, 100],
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2
  },
  "scrollbar": {
    "show": "auto",
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true
  },
  "enable_language_server": true,
  "show_completion_documentation": true,
  "completion_documentation_secondary_query_debounce": 300,
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-20250514"
    },
    "version": "2",
    "enabled": true
  },
  "tasks": {
    "variables": {
      "DEVQAI_ROOT": "/Users/dionedge/devqai",
      "PYTEST_ARGS": "tests/ --cov=src/ --cov-report=html --cov-fail-under=90",
      "FASTAPI_CMD": "uvicorn main:app --reload --host 0.0.0.0 --port 8000",
      "LOGFIRE_CHECK": "python -c \"import logfire; print('âœ… Logfire available')\""
    }
  },
  "experimental.theme_overrides": {
    "syntax": {
      "keyword": {
        "color": "#ff79c6",
        "font_weight": 300
      },
      "string": {
        "color": "#f1fa8c"
      },
      "function": {
        "color": "#50fa7b"
      },
      "type": {
        "color": "#8be9fd"
      },
      "comment": {
        "color": "#6272a4",
        "font_style": "italic"
      }
    }
  }
}
