{
  "insurance_data_source": {
    "name": "Secure Insurance Eligibility Hub",
    "environment": "production",
    "base_url": "https://secure-eligibility.insurance-hub.com/api/v1",
    "auth_url": "https://auth.insurance-hub.com/oauth/token",
    "timeout": 30,
    "retry_attempts": 3,
    "rate_limit": {
      "requests_per_minute": 100,
      "burst_limit": 20
    }
  },
  "authentication": {
    "type": "oauth2_client_credentials",
    "client_id": "${INSURANCE_CLIENT_ID}",
    "client_secret": "${INSURANCE_CLIENT_SECRET}",
    "scope": "eligibility:read eligibility:write",
    "token_refresh_threshold": 300,
    "certificate_path": "/secure/certs/memorial_hc_client.pem",
    "certificate_key_path": "/secure/certs/memorial_hc_client.key"
  },
  "endpoints": {
    "health_check": "/health",
    "list_patients": "/eligibility/patients",
    "get_patient": "/eligibility/patient/{member_id}",
    "batch_download": "/eligibility/batch/{date}",
    "submit_inquiry": "/eligibility/inquiry",
    "webhook_register": "/webhooks/register",
    "webhook_unregister": "/webhooks/unregister"
  },
  "webhooks": {
    "enabled": true,
    "callback_url": "https://patient-mgmt.memorial-hc.com/api/webhooks/eligibility",
    "secret_token": "${WEBHOOK_SECRET}",
    "events": [
      "eligibility.status_changed",
      "eligibility.coverage_terminated",
      "eligibility.new_enrollment",
      "eligibility.urgent_update"
    ]
  },
  "data_processing": {
    "batch_schedule": "0 2 * * *",
    "birthday_alert_schedule": "0 6 * * *",
    "real_time_events": [
      "URGENT",
      "STATUS_CHANGE",
      "NEW_ENROLLMENT"
    ],
    "validation_strict_mode": true,
    "auto_retry_failed_records": true,
    "dead_letter_queue_enabled": true
  },
  "security": {
    "tls_version": "1.3",
    "cipher_suites": [
      "TLS_AES_256_GCM_SHA384",
      "TLS_CHACHA20_POLY1305_SHA256"
    ],
    "certificate_pinning": true,
    "audit_logging": true,
    "phi_encryption": {
      "algorithm": "AES-256-GCM",
      "key_rotation_days": 90
    }
  },
  "monitoring": {
    "health_check_interval": 60,
    "alert_thresholds": {
      "connection_failures": 3,
      "invalid_records_percent": 5,
      "response_time_ms": 5000,
      "authentication_failures_per_hour": 10
    },
    "metrics": {
      "enabled": true,
      "endpoint": "https://metrics.memorial-hc.com/insurance-integration",
      "api_key": "${METRICS_API_KEY}"
    }
  }
}
